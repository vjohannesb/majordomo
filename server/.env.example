# Server Configuration
PORT=3000
BASE_URL=http://localhost:3000
NODE_ENV=development

# Database (Neon/Supabase PostgreSQL)
DATABASE_URL=postgres://user:password@host/database

# Google OAuth (for Gmail, Calendar, and user auth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Slack OAuth (optional)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Linear OAuth (optional)
LINEAR_CLIENT_ID=your-linear-client-id
LINEAR_CLIENT_SECRET=your-linear-client-secret
LINEAR_WEBHOOK_SECRET=your-linear-webhook-secret

# Notion OAuth (optional)
NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret
NOTION_WEBHOOK_SECRET=your-notion-webhook-secret

# Dashboard URL (for redirects after auth)
# Set this to your deployed dashboard URL in production
DASHBOARD_URL=http://localhost:3001
